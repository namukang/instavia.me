{
  "name": "Instant via.me",
  "version": "0.0.1",
  "description": "Chrome extension for via.me",
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "https://api.via.me/*",
    "http://via.me/*",
    "contextMenus"
  ],
  "content_scripts": [
  {
    "matches": ["http://radiumone.com/robots.txt*"],
    "js": ["oauth2/oauth2_inject.js"],
    "run_at": "document_start"
  },
  {
    "matches": ["<all_urls>"],
    "js": ["js/contentscript.js"]
  }
  ],
  "options_page": "options.html"
}
